<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE2E6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.info.InfoFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_infoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:shapeAppearanceOverlay="@style/round"
        android:background="#999999"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_infoName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="MS Dhoni"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_infoImage"
        app:layout_constraintBottom_toTopOf="@id/tv_infoDetails" />

    <TextView
        android:id="@+id/tv_infoDetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="PERSONAL INFORMATION"
        android:textColor="@color/white"
       android:paddingLeft="16dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:background="#009270"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_infoName" />

    <TextView
        android:id="@+id/tv_born"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Role"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_infoDetails" />

    <TextView
        android:id="@+id/tv_info_born"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_born"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_infoDetails" />

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Team"
        android:layout_marginTop="1dp"
        android:textColor="@color/black"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_born" />

    <TextView
        android:id="@+id/tv_infoTeam"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_team"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_born" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Country"
        android:layout_marginTop="1dp"
        android:textColor="@color/black"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_team" />

    <TextView
        android:id="@+id/tv_infoCountry"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_country"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_team" />

</androidx.constraintlayout.widget.ConstraintLayout>