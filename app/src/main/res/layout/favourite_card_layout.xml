<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/iv_player_fav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        app:shapeAppearanceOverlay="@style/round"
        android:background="#999999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_person_24"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_player_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_player_fav"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_player_fav"
        android:layout_marginTop="3dp"
        android:text="Surya Kumar Yadav"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_country_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_player_fav"
        app:layout_constraintTop_toBottomOf="@id/tv_player_fav"
        android:text="India" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_country_fav"
        android:layout_marginTop="14dp"
        android:background="#958E8E" />

</androidx.constraintlayout.widget.ConstraintLayout>